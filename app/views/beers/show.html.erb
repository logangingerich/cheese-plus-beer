<div class="jumbotron text-center">
  <h1><%= @beer.name %></h1>
</div>
<h3 class="page-header text-center">Cheese Pairing Suggestions</h3>
<% @beer.pairings.each do |pair| %>
  <h4 class="text-center"><%= link_to pair.cheese.name, cheese_path(pair.cheese_id) %></h4>
<% end %>
<div class="text-center">
  <%= link_to "Back To Search", root_path, :class => "btn btn-success" %>
</div>
